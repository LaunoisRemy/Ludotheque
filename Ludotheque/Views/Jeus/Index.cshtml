@model IEnumerable<Ludotheque.Models.Jeu>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
@*  asp-controller = Nom du controller; asp-action = nom de l'action du controller, lien href ; method = *@
<form asp-controller="Jeus" asp-action="Index" method="get">
    <p>
        Nom: <input type="text" name="SearchString">
        <input type="submit" value="Filter" />
    </p>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nom)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NbMinJoueur)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NbMaxJoueur)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AgeMinimum)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TempsJeu)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Prix)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LienAchat)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LienVideo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LienImg)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Categorie)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nom)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NbMinJoueur)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NbMaxJoueur)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AgeMinimum)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TempsJeu)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Prix)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LienAchat)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LienVideo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LienImg)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Categorie)
            </td>
            <td>
                @* asp-action = nom de l'action du controller, asp-route-id = ajout l'id de l'objet a editer ; Fait papr rapport au format de route de startups *@
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
        }
    </tbody>
</table>
